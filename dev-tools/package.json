{
  "name": "@saflib/dev-tools",
  "description": "Tools for software development",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "docs": "typedoc --plugin typedoc-plugin-markdown --entryFileName index --out docs/ref  --indexFormat htmlTable --hideBreadcrumbs --parametersFormat htmlTable --treatValidationWarningsAsErrors",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate-dockerfiles": "node --experimental-strip-types ./generate-dockerfiles.ts",
    "typecheck": "tsc"
  },
  "bin": {
    "generate-dockerfiles": "./generate-dockerfiles.ts",
    "saf-doc": "./src/workspace-cli.ts",
    "saf-health-assets": "./health-assets.ts",
    "saf-docs": "./src/saf-docs-cli.ts"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@saflib/vitest": "*",
    "memfs": "^4.17.0"
    
  }
}
